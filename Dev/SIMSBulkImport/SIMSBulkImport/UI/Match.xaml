<UserControl x:Class="Matt40k.SIMSBulkImport.Match"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="65" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Name -->
        <Label Content="Surname" HorizontalAlignment="Left" Name="labelSurname" VerticalAlignment="Top" Grid.Column="1"
               Grid.Row="1" />
        <Label Content="Firstname" HorizontalAlignment="Left" Name="labelFirst" VerticalAlignment="Top" Grid.Column="4"
               Grid.Row="1" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboSurname" VerticalAlignment="Top" Width="150"
                  Grid.Column="2" Grid.Row="1" SelectionChanged="combo_SelectionChanged" TabIndex="1" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboFirst" VerticalAlignment="Top" Width="150"
                  Grid.Column="5" Grid.Row="1" SelectionChanged="combo_SelectionChanged" TabIndex="2" />
        <!-- Gender -->
        <Label Content="Gender" Name="labelGender" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left"
               VerticalAlignment="Top" IsEnabled="False" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboGender" VerticalAlignment="Top" Width="150"
                  Grid.Column="2" Grid.Row="2" SelectionChanged="combo_SelectionChanged" TabIndex="3" IsEnabled="False" />
        <!-- Staff code \ Admission Number \ Postcode -->
        <Label Content="Staff Code" Height="28" HorizontalAlignment="Left" Name="labelCode" VerticalAlignment="Top"
               Grid.Column="4" Grid.Row="2" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboCode" VerticalAlignment="Top" Width="150"
                  Grid.Column="5" Grid.Row="2" SelectionChanged="combo_SelectionChanged" TabIndex="5" />
        <!-- Title \ Year group \ Town -->
        <Label Content="Title" Name="labelTitle" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboTitle" VerticalAlignment="Top" Width="150"
                  Grid.Column="2" Grid.Row="3" SelectionChanged="combo_SelectionChanged" TabIndex="4" />
        <!-- Reg -->
        <Label Content="Registration Group" Height="28" HorizontalAlignment="Left" Name="labelReg"
               VerticalAlignment="Top" Grid.Column="4" Grid.Row="3" IsEnabled="False" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboReg" VerticalAlignment="Top" Width="150"
                  Grid.Column="5" Grid.Row="3" SelectionChanged="combo_SelectionChanged" IsEnabled="False" TabIndex="5" />

        <Label Content="Filter" Grid.Column="7" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <ComboBox IsEnabled="False" Name="comboFilter" Height="23" Grid.Column="8" Grid.Row="1"
                  HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" SelectedIndex="0"
                  SelectionChanged="comboFilter_SelectionChanged" />
        <Label Content="Workbook" Grid.Row="2" Grid.Column="7" />
        <ComboBox Name="comboWorkbook" Grid.Row="2" Grid.Column="8" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Width="150" SelectedIndex="0" Height="23" IsEnabled="False"
                  SelectionChanged="comboWorkbook_SelectionChanged" />
        <CheckBox Name="comboIgnoreFirst" Content="First line is title" Grid.Column="8" Grid.Row="3"
                  HorizontalAlignment="Left" VerticalAlignment="Top" Unchecked="comboIgnoreFirst_Checked"
                  Checked="comboIgnoreFirst_Checked" />

        <!-- SIMS UDF -->
        <Label Content="SIMS Type" Grid.Row="4" Grid.Column="1" IsEnabled="True" />
        <ComboBox Name="comboSIMSUDFType" Height="23" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Grid.Column="2" Grid.Row="4" IsEnabled="False" SelectedIndex="0">
            <ComboBoxItem Content="Text (single-line)" />
            <ComboBoxItem Content="Text (multi-line)" />
            <ComboBoxItem Content="Date" />
            <ComboBoxItem Content="Number" />
            <ComboBoxItem Content="Decimal" />
            <ComboBoxItem Content="Currency" />
            <ComboBoxItem Content="True/False" />
        </ComboBox>
        <Label Content="SIMS UDF" Grid.Row="5" Grid.Column="1" ToolTip="SIMS User Defined Field" IsEnabled="True" />
        <ComboBox Name="comboSIMSUDF" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Width="150" Height="23" IsEnabled="True" SelectionChanged="comboSIMSUDF_SelectionChanged" />
        <Label Name="labelUDF" Content="UDF" Grid.Column="1" Grid.Row="6" IsEnabled="False" />
        <ComboBox Name="comboUDF" Height="23" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Grid.Column="2" Grid.Row="6" IsEnabled="False" SelectionChanged="combo_SelectionChanged" />

        
        <!-- Person ID -->
        <Label Content="Person ID" HorizontalAlignment="Left" Name="labelPersonID" VerticalAlignment="Top" Grid.Column="1"
               Grid.Row="7" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboPersonID" VerticalAlignment="Top" Width="150"
                  Grid.Column="2" Grid.Row="7" SelectionChanged="combo_SelectionChanged" TabIndex="1" />
        
        <!-- Email -->
        <Label Content="Email" Height="28" HorizontalAlignment="Left" Name="labelEmail" VerticalAlignment="Top"
               Grid.Column="4" Grid.Row="4" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboEmail" VerticalAlignment="Top" Width="150"
                  Grid.Column="5" Grid.Row="4" SelectionChanged="combo_SelectionChanged" TabIndex="6" />
        <Label Name="labelEmailLocation" Content="Email Location" Grid.Column="4" Grid.Row="5" IsEnabled="False" />
        <ComboBox Name="comboEmailLocation" Height="23" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Grid.Column="5" Grid.Row="5" IsEnabled="False" SelectionChanged="combo_SelectionChanged" />
        <Label Name="labelEmailMain" Content="Email Main" Grid.Column="4" Grid.Row="6" IsEnabled="False" />
        <ComboBox Name="comboEmailMain" Height="23" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Grid.Column="5" Grid.Row="6" IsEnabled="False" SelectionChanged="combo_SelectionChanged"/>
        <Label Name="labelEmailPrimary" Content="Email Primary" Grid.Column="4" Grid.Row="7" IsEnabled="False" />
        <ComboBox Name="comboEmailPrimary" Height="23" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Grid.Column="5" Grid.Row="7" IsEnabled="False" SelectionChanged="combo_SelectionChanged"/>
        <Label Name="labelEmailNotes" Content="Email Notes" Grid.Column="4" Grid.Row="8" IsEnabled="False" />
        <ComboBox Name="comboEmailNotes" Height="23" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Grid.Column="5" Grid.Row="8" IsEnabled="False" SelectionChanged="combo_SelectionChanged" />

        <!-- Telephone -->
        <Label Content="Telephone" Height="28" HorizontalAlignment="Left" Name="labelTelephone" VerticalAlignment="Top"
               Grid.Column="7" Grid.Row="4" />
        <ComboBox Height="23" HorizontalAlignment="Left" Name="comboTelephone" VerticalAlignment="Top" Width="150"
                  Grid.Column="8" Grid.Row="4" SelectionChanged="combo_SelectionChanged" TabIndex="6" />
        <Label Name="labelTelephoneLocation" Content="Telephone Location" Grid.Column="7" Grid.Row="5"
               IsEnabled="False" />
        <ComboBox Name="comboTelephoneLocation" Height="23" Width="150" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Grid.Column="8" Grid.Row="5" IsEnabled="False"
                  SelectionChanged="combo_SelectionChanged" />
        <Label Name="labelTelephoneMain" Content="Telephone Main" Grid.Column="7" Grid.Row="6" IsEnabled="False" />
        <ComboBox Name="comboTelephoneMain" Height="23" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Grid.Column="8" Grid.Row="6" IsEnabled="False" SelectionChanged="combo_SelectionChanged"/>
        <Label Name="labelTelephonePrimary" Content="Telephone Primary" Grid.Column="7" Grid.Row="7" IsEnabled="False" />
        <ComboBox Name="comboTelephonePrimary" Height="23" Width="150" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Grid.Column="8" Grid.Row="7" IsEnabled="False"
                  SelectionChanged="combo_SelectionChanged"/>
        <Label Name="labelTelephoneNotes" Content="Telephone Notes" Grid.Column="7" Grid.Row="8" IsEnabled="False" />
        <ComboBox Name="comboTelephoneNotes" Height="23" Width="150" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Grid.Column="8" Grid.Row="8" IsEnabled="False"
                  SelectionChanged="combo_SelectionChanged" />
        
        <Grid Height="440" Grid.ColumnSpan="10" Grid.Column="0" Grid.Row="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Label Content="Preview" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Center"
                   IsEnabled="False" />
            <DataGrid Margin="0,40,0,0" AutoGenerateColumns="True" HorizontalAlignment="Center" Name="dataGrid"
                      VerticalAlignment="Center" Height="200" Width="870" Grid.Row="0" ItemsSource="{Binding Path=.}"
                      IsReadOnly="True" />
            <Button Content="OK" Grid.Row="1" HorizontalAlignment="Center" Name="button" VerticalAlignment="Center"
                    Margin="0,10,0,10" Height="30" Width="75" Click="button_Click" TabIndex="5" />
        </Grid>

    </Grid>
</UserControl>