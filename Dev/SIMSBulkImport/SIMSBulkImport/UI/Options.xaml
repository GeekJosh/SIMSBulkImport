<UserControl x:Class="Matt40k.SIMSBulkImport.Options"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="120" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Label Name="labelTitle" Content="Options" Grid.Row="1" Grid.Column="2" FontSize="24" />

        <CheckBox Content="Debug mode" Grid.Column="2" Grid.Row="2" Height="16" HorizontalAlignment="Left"
                  Name="checkBoxDebug" VerticalAlignment="Center" />
        <CheckBox Content="Automatically check for updates" Grid.Column="2" Grid.Row="3" Height="16"
                  HorizontalAlignment="Left" Name="checkBoxUpdates" VerticalAlignment="Center" />

        <Grid Grid.Column="2" Grid.Row="4" Height="150" Width="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <!-- Email -->
            <Label Name="labelEmailMain" Content="Email Main" Grid.Row="0" HorizontalAlignment="Left" />
            <ComboBox Name="comboEmailMain" Height="23" Width="150" HorizontalAlignment="Right" Grid.Row="0">
                <ComboBoxItem Content="Yes" />
                <ComboBoxItem Content="Yes (overwrite)" />
                <ComboBoxItem Content="No" />
            </ComboBox>
            <Label Name="labelEmailPrimary" Content="Email Primary" Grid.Row="1" />
            <ComboBox Name="comboEmailPrimary" Height="23" Width="150" HorizontalAlignment="Right" Grid.Row="1">
                <ComboBoxItem Content="Yes" />
                <ComboBoxItem Content="Yes (overwrite)" />
                <ComboBoxItem Content="No" />
            </ComboBox>

            <!-- Telephone -->
            <Label Name="labelTelephoneMain" Content="Telephone Main" Grid.Row="2" />
            <ComboBox Name="comboTelephoneMain" Height="23" Width="150" HorizontalAlignment="Right"  Grid.Row="2" >
                <ComboBoxItem Content="Yes" />
                <ComboBoxItem Content="Yes (overwrite)" />
                <ComboBoxItem Content="No" />
            </ComboBox>
            <Label Name="labelTelephonePrimary" Content="Telephone Primary" Grid.Row="3" />
            <ComboBox Name="comboTelephonePrimary" Height="23" Width="150" HorizontalAlignment="Right" Grid.Row="3">
                <ComboBoxItem Content="Yes" />
                <ComboBoxItem Content="Yes (overwrite)" />
                <ComboBoxItem Content="No" />
            </ComboBox>
        </Grid>

        <!-- Footer -->
        <Button Content="Cancel" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="7" Height="26" HorizontalAlignment="Left"
                Name="buttonCancel" VerticalAlignment="Center" Width="100" Click="buttonCancel_Click" />
        <Button Content="Save" Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="7" Height="26" HorizontalAlignment="Right" Name="buttonSave"
                VerticalAlignment="Center" Width="100" Click="buttonSave_Click" />
    </Grid>
</UserControl>