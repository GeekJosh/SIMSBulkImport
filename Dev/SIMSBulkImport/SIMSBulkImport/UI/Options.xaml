<UserControl x:Class="Matt40k.SIMSBulkImport.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <CheckBox Content="Debug mode" Grid.Column="1" Grid.Row="1" Height="16" HorizontalAlignment="Left" Name="checkBoxDebug" VerticalAlignment="Center" />
        <CheckBox Content="Automatically check for updates" Grid.Column="1" Grid.Row="2" Height="16" HorizontalAlignment="Left" Name="checkBoxUpdates" VerticalAlignment="Center" />
        <Button Content="Cancel" Grid.Column="1" Grid.Row="4" Height="26" HorizontalAlignment="Left" Name="buttonCancel" VerticalAlignment="Center" Width="100" Click="buttonCancel_Click" />
        <Button Content="Save" Grid.Column="1" Grid.Row="4" Height="26" HorizontalAlignment="Right" Name="buttonSave" VerticalAlignment="Center" Width="100" Click="buttonSave_Click" />
    </Grid>
</UserControl>
