<Window x:Class="GingerBeard.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="300" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="100" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" />
        <Label Name="labelTitle" Grid.Row="1" Grid.Column="3" VerticalAlignment="Bottom" FontSize="16" />
        <Label Name="labelDescription" Grid.Row="2" Grid.Column="3" VerticalAlignment="Top" />
        <Label Name="labelCopyright" Grid.Row="3" Grid.Column="3" VerticalAlignment="Top" />
        <Label Name="labelVersion" Grid.Row="5" Grid.Column="3" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
    </Grid>
    
</Window>
