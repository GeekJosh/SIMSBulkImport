<UserControl x:Class="Matt40k.SIMSBulkImport.UserSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
        <DataGrid AutoGenerateColumns="True" HorizontalAlignment="Center" Name="dataGrid" IsReadOnly="True"
                  VerticalAlignment="Center" MinWidth="950" MinHeight="500"
                  Margin="25,25,25,25"
                  ItemsSource="{Binding Path=.}" />
        <StatusBar Height="25" Name="statusBar" VerticalAlignment="Bottom">
            <StatusBarItem Name="Status" />
        </StatusBar>
        </Grid>
    </ScrollViewer>
</UserControl>