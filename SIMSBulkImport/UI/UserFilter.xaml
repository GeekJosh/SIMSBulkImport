<UserControl x:Class="Matt40k.SIMSBulkImport.UserFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro">
    <Grid>
        <Grid Name="loadGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Controls:ProgressRing IsActive="True" Foreground="DodgerBlue" Name="progressRing" Height="100" Grid.Row="0" Margin="120,0"  VerticalAlignment="Bottom" />
            <Label Name="loadLabel" Content="Loading Pupil Hierarchy..." HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Margin="120,0" />
        </Grid>
        <TreeView Name="pupilHierarchy" Width="250" Height="450" Visibility="Visible">
            <TreeViewItem Header="All">
                <TreeViewItem Header="Years" Name="yearTree"></TreeViewItem>
                <TreeViewItem Header="Houses" Name="houseTree"></TreeViewItem>
            </TreeViewItem>
        </TreeView>
    </Grid>
</UserControl>